- subject_items.each do |subject_item|
  .subject-item
  .title
    = subject_item.decorate.title_with_assigned_teacher
  %table.table.table-condensed
    %thead
      %tr
        %th.full-name= t('subjects.columns.full_name')
        %th.avg-notes= t('subjects.columns.avg_notes')
        %th= "#{t('student.columns.birthday')}:"
    %tbody
      - subject_item.students.each do |student|
        %tr
          %td= student.decorate.full_name
          %td= student.decorate.avg_notes(subject_item)
          %td= student.birthday
